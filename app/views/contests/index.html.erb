<% content_for :title, "Contest" %>
<div class="row">
	<h3>Welcome to Level <%= get_level %></h3>
</div>
<div class="row">
	<div class="col-sm-offset-2 col-md-offset-2 col-lg-offset-2 col-sm-8 col-md-8 col-lg-8">
		<%= image_tag("#{@name}.jpg", :class => "img-responsive center-block") %>
	</div>
</div>
<div class="jumbotron">
	<%= form_for @problem, url: {action: "validate"} do |f| %>
		<fieldset>
			<%= render 'shared/error_messages', locals: { obj: @problem} %>
			<%= render 'shared/form_label_text', locals: { obj: f, label: "answer"} %>
			<%= render 'shared/form_submit', locals: { obj: f, type: "submit", reset: true} %>
		</fieldset>
	<% end %>
</div>